<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".FeedFragment"
    android:fitsSystemWindows="true"
    android:background="#F9CDCB"
    android:orientation="vertical"
    android:id="@+id/fragment_feed">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="30dp"
            android:id="@+id/layout"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Enter your feedback here"
                android:textSize="25dp"
                android:gravity="center"
                android:layout_marginTop="50dp"
                android:layout_marginBottom="20dp"
                android:textColor="#EE6674"
                />
            <ProgressBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:visibility="gone"
                android:id="@+id/progressBAr"
                />


            <EditText
                android:layout_margin="20dp"
                android:id="@+id/feedback_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="your name"
                android:background="@color/white"
                android:minHeight="20dp"
                android:padding="12dp"
                android:gravity="top"
                android:inputType="textMultiLine"
                android:ems="10"
                android:textColor="@color/black"
                />
            <EditText
                android:layout_margin="20dp"
                android:id="@+id/feedback_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="your name"
                android:background="@color/white"
                android:minHeight="20dp"
                android:padding="12dp"
                android:gravity="top"
                android:inputType="number"
                android:ems="10"
                android:textColor="@color/black"
                />
            <EditText
                android:layout_margin="10dp"
                android:id="@+id/feedback"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter your feedback here"
                android:background="@color/white"
                android:minHeight="120dp"
                android:padding="12dp"
                android:gravity="top"
                android:inputType="textMultiLine"
                android:ems="10"
                android:textColor="@color/black"
                />
            <Button
                android:id="@+id/submitFeedback"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:text="Submit Message"
                android:padding="5dp"
                android:textSize="10dp"
                android:backgroundTint="#EE6674"
                android:textColor="@color/white"

                />
            <Button
                android:id="@+id/showFeedback"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:text="Show Feedback"
                android:padding="5dp"
                android:textSize="10dp"
                android:backgroundTint="#EE6674"
                android:textColor="@color/white"

                />
        </LinearLayout>
</FrameLayout>